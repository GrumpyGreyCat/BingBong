{% extends 'base.html.twig' %}

{% block body %}
{% block navbar %}{{ parent() }}{% endblock %}
<div class="container mt-5">
    <h1 class="text-center mb-5"><span class="text-primary">&gt;</span> GLOBAL_LEADERBOARD</h1>

    <div class="card bg-dark text-white border-primary shadow-lg">
        <div class="card-body p-0">
            {# templates/scoreboard/index.html.twig #}

<table class="table table-dark table-hover align-middle">
    <thead>
        <tr>
            <th>Rank</th>
            <th>User</th>
            <th class="text-center">Rooms Finished</th>
            <th class="text-center">Breakdown</th>
            <th class="text-center">Score</th>
            <th class="text-end">Last Solve</th>
        </tr>
    </thead>
    <tbody>
        {% for score in scores %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ score.email }}</td>
            <td class="text-center">
                <span class="h5 mb-0 text-info">{{ score.totalSolved }}</span>
            </td>
            <td class="text-center">
                <span class="badge bg-success">Easy: {{ score.easySolved|default(0) }}</span>
                <span class="badge bg-warning text-dark">Medium: {{ score.mediumSolved|default(0) }}</span>
                <span class="badge bg-danger">Hard: {{ score.hardSolved|default(0) }}</span>
            </td>
            <td class="text-center">
                <span class="badge bg-primary px-3 py-2">{{ score.totalPoints }} PTS</span>
            </td>
            <td class="text-end text-muted small">
                {{ score.lastSolve|date('d/M H:i') }}
            </td>
            
        </tr>
        {% endfor %}
    </tbody>
</table>
        </div>
    </div>
</div>
{% endblock %}