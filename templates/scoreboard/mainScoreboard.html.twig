{% extends 'base.html.twig' %}

{% block body %}
{% block navbar %}{{ parent() }}{% endblock %}

<div class="container scoreboard-container">
    <div class="terminal-loader mb-5">
        <h1 class="matrix-title text-center" data-text="GLOBAL_LEADERBOARD">
            <span class="matrix-glow">></span> GLOBAL_LEADERBOARD
        </h1>
        <div class="terminal-bar"></div>
    </div>

    <div class="matrix-card">
        <div class="table-responsive">
            <table class="table matrix-table align-middle">
                <thead>
                    <tr>
                        <th class="rank-col"># RANK</th>
                        <th>OPERATOR</th>
                        <th class="text-center">NODES_CLEARED</th>
                        <th class="text-center">CLEARANCE_BREAKDOWN</th>
                        <th class="text-center">TOTAL_CREDITS</th>
                        <th class="text-end">LAST_ACTIVITY</th>
                    </tr>
                </thead>
                <tbody>
                    {% for score in scores %}
                    <tr class="matrix-row">
                        <td class="rank-cell">
                            <span class="rank-number">{{ loop.index }}</span>
                        </td>
                        <td class="user-cell">
                            <span class="user-email">{{ score.email }}</span>
                        </td>
                        <td class="text-center">
                            <span class="nodes-count">{{ score.totalSolved }}</span>
                        </td>
                        <td class="text-center">
                            <span class="m-badge badge-easy">E:{{ score.easySolved|default(0) }}</span>
                            <span class="m-badge badge-medium">M:{{ score.mediumSolved|default(0) }}</span>
                            <span class="m-badge badge-hard">H:{{ score.hardSolved|default(0) }}</span>
                        </td>
                        <td class="text-center">
                            <span class="points-display">{{ score.totalPoints }} <span class="small">XP</span></span>
                        </td>
                        <td class="text-end last-solve-cell">
                            {{ score.lastSolve|date('d/M H:i') }}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}