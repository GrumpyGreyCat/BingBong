{% extends "base.html.twig" %}

{% block body %}
{% block navbar %}{{ parent() }}{% endblock %}

<div class="login-wrapper">
    <div class="matrix-card login-card-custom">
        <div class="matrix-card-header text-center">
            <h2 class="matrix-title h3 mb-0">
                <span class="matrix-glow">></span> OVERWRITE_CORE_DATA
            </h2>
        </div>

        <div class="card-body p-4">
            {{ form_start(updateUserForm, {'attr': {'class': 'matrix-form'}}) }}
                
                <div class="mb-4">
                    {{ form_label(updateUserForm.email, 'SIGNAL_ADDRESS (EMAIL)', {'label_attr': {'class': 'terminal-label-sm'}}) }}
                    {{ form_widget(updateUserForm.email, {'attr': {'class': 'form-control matrix-input', 'placeholder': 'address@network.com'}}) }}
                    <div class="error-text">{{ form_errors(updateUserForm.email) }}</div>
                </div>
                
                <div class="mb-4">
                    {{ form_label(updateUserForm.username, 'OPERATOR_HANDLE (USERNAME)', {'label_attr': {'class': 'terminal-label-sm'}}) }}
                    {{ form_widget(updateUserForm.username, {'attr': {'class': 'form-control matrix-input'}}) }}
                    <div class="error-text">{{ form_errors(updateUserForm.username) }}</div>
                </div>

                <div class="mb-4">
                    {{ form_label(updateUserForm.password, 'NEW_ENCRYPTION_KEY (PASSWORD)', {'label_attr': {'class': 'terminal-label-sm'}}) }}
                    {{ form_widget(updateUserForm.password, {'attr': {'class': 'form-control matrix-input', 'placeholder': 'Leave blank to retain current key'}}) }}
                    <div class="error-text">{{ form_errors(updateUserForm.password) }}</div>
                </div>

                <div class="d-flex justify-content-between align-items-center pt-3">
                    <a href="{{ path('profilePage', {'uuidUser': app.user.id}) }}" class="action-link delete">
                        [ ABORT_OVERRIDE ]
                    </a>
                    <button type="submit" class="matrix-btn">
                        [ COMMIT_CHANGES ]
                    </button>
                </div>
            {{ form_end(updateUserForm) }}
        </div>
    </div>
</div>
{% endblock %}