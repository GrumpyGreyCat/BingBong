{% extends 'base.html.twig' %}

{% block body %}
{% block navbar %}{{ parent() }}{% endblock %}

<div class="container directory-container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="matrix-title m-0"><span class="matrix-glow">></span> ROOM_DATABASE</h1>
        <a href="{{ path('createRoom') }}" class="matrix-btn">
            [+]INITIALIZE_NEW_ROOM
        </a>
    </div>

    <div class="matrix-card">
        <div class="table-responsive">
            <table class="table matrix-table align-middle">
                <thead>
                    <tr>
                        <th class="ps-4">UID</th>
                        <th>ROOM_ID</th>
                        <th>DIFFICULTY</th>
                        <th class="text-center">SOLVES</th>
                        <th>COMPONENT_FILE</th>
                        <th class="text-end pe-4">OPERATIONS</th>
                    </tr>
                </thead>
                <tbody id="userTableBody"> {# Reusing the ID for your search/sort JS #}
                    {% for room in rooms %}
                    <tr class="user-row"> {# Reusing class for JS compatibility #}
                        <td class="user-id ps-4">#{{ room.id|format('%03d') }}</td>
                        <td><span class="user-name fw-bold">{{ room.number }}</span></td>
                        <td>
                            <span class="m-badge 
                                {% if room.difficulty.value == 'easy' %}badge-easy
                                {% elseif room.difficulty.value == 'medium' %}badge-medium
                                {% else %}badge-hard{% endif %}">
                                {{ room.difficulty.value|upper }}
                            </span>
                        </td>
                        <td class="text-center">
                            <span class="nodes-count">{{ solveCounts[room.id] }}</span>
                        </td>
                        <td class="user-email small opacity-75">{{ room.component|default('NONE_DETECTION') }}</td>
                        <td class="text-end pe-4">
                            <div class="action-group">
                                <a href="{{ path('roomEdit', {id: room.id}) }}" class="action-link modify">EDIT</a>
                                <a href="#" 
                                   class="action-link delete"
                                   onclick="if(confirm('TERMINATE_ROOM_{{ room.number }}?')) { window.location.href='{{ path('roomDelete', {id: room.id}) }}' }">
                                   DEL
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-5 no-data">
                            <span class="blink">[!] NO_ROOMS_DETECTED_IN_CLUSTER</span>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}