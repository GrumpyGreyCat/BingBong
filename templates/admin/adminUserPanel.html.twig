{% extends "base.html.twig" %}

{% block body %}
{% block navbar %}{{ parent() }}{% endblock %}

<div class="container directory-container">
    <header class="directory-header mb-5">
        <h1 class="matrix-glow"><span class="brand-accent">&gt;</span> USER_MANIFEST</h1>
        <p class="terminal-subtitle">Authorized personnel database access // SECURED_CONNECTION</p>
    </header>

    <div class="search-bar-container mb-4">
        <div class="input-group matrix-input-group">
            <span class="input-group-text terminal-label">> SEARCH_QUERY:</span>
            <input type="text" 
                   id="terminalSearch" 
                   class="form-control matrix-input" 
                   placeholder="Enter UID, Username, or Email..."
                   autocomplete="off">
        </div>
    </div>
    
    <div class="matrix-card overflow-hidden">
        <div class="table-responsive">
            <table class="table matrix-table align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">UID</th>
                        <th>
                            USERNAME
                            <button id="sortUsername" class="sort-btn">
                                <span>[SORT]</span>
                            </button>
                        </th>
                        <th>EMAIL_ADDRESS</th>
                        <th>CLEARANCE_LEVEL</th>
                        <th class="text-end pe-4">SYSTEM_OPERATIONS</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                    {% for user in users %}
                        <tr class="user-row"> 
                            <td class="user-id ps-4">#{{ user.id|format('%03d') }}</td>
                            <td class="user-name fw-bold">{{ user.username }}</td>
                            <td class="user-email">{{ user.email }}</td>
                            <td>
                                {% for role in user.roles %}
                                    <span class="role-badge">{{ role|replace({'ROLE_': ''}) }}</span>
                                {% endfor %}
                            </td>
                            <td class="text-end pe-4">
                                <div class="action-group">
                                    <a href="{{ path('profilePage', {'uuidUser': user.id}) }}" class="action-link view">VIEW</a>
                                    <a href="{{ path('updateUser', {'uuidUser': user.id}) }}" class="action-link modify">MOD</a>
                                    <a href="{{ path('delUser', {'uuidUser': user.id}) }}" class="action-link delete">DEL</a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center no-data py-5">
                                <span class="blink">[!] NO_ENTRIES_FOUND_IN_DATABASE</span>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% block js %}
    {{ parent() }}
    <script src="{{ asset('js/adminUserSearch.js') }}"></script>
{% endblock %}
{% endblock %}