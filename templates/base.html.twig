<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}ctf-hexagone{% endblock %}</title>
        
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/stylesheet.css') }}">
        <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
        {% endblock %}
    </head>

    <body class="ctf-body matrix-theme">
    <div class="scanlines"></div>

    {% block navbar %}
    <nav class="navbar navbar-expand-lg fixed-top ctf-navbar terminal-border-bottom">
        <div class="container">
            <a class="navbar-brand mt-1" href="{{ path('home') }}">
                <span class="matrix-glow">[</span> 
                HEXAGONE_CTF 
                <span class="matrix-glow">]</span>
            </a>

            <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="toggler-icon-bar"></span>
                <span class="toggler-icon-bar"></span>
                <span class="toggler-icon-bar"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item"><a class="nav-link text-uppercase" href="{{ path('home') }}">Terminal</a></li>
                    <li class="nav-item"><a class="nav-link text-uppercase" href="{{ path('scoreboard') }}">Scores</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                    
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-uppercase" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Admin Panel
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                            <li><a class="dropdown-item text-uppercase" href="{{ path('adminUserPanel') }}">Manage Users</a></li>
                            <li><a class="dropdown-item text-uppercase" href="{{ path('roomManagement') }}">Manage Rooms</a></li>
                        </ul>
                    </li>
                    {% endif %}
                    
                    {% if app.user %}
                        <li class="nav-item"><a class="nav-link matrix-btn ms-lg-3" href="{{ path('profilePage', {'uuidUser': app.user.id}) }}">MATRICULE</a></li>
                        <li class="nav-item"><a class="nav-link matrix-btn ms-lg-3" href="{{ path('logout') }}">DISCONNECT</a></li>
                    {% else %}
                        <li class="nav-item"><a class="nav-link matrix-btn ms-lg-3" href="{{ path('login') }}">INITIALIZE</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    {% endblock %}

    <main class="ctf-main-content">
            {% block body %}{% endblock %}
            {% block menu %}{% endblock %}
            {% block roomContent %}{% endblock %}
            {% block table %}{% endblock %}
    </main>

        {% block js %}{% endblock %}
    </body>
</html>