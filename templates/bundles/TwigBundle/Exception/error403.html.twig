{% extends 'base.html.twig' %}

{% block body %}
{% block navbar %}{{ parent() }}{% endblock %}

<div class="container directory-container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="matrix-card forbidden-card text-center p-5">


        <h1 class="display-4 terminal-error-text fw-bold mb-0">403_ACCESS_DENIED</h1>
        <h2 class="matrix-title mt-0 mb-4">
            <span class="matrix-glow">></span> INSUFFICIENT_CLEARANCE
        </h2>
        
        <div class="terminal-text-block mb-4 text-start">
            <p class="mb-1 text-danger fw-bold">[!] ALARM: UNAUTHORIZED_ACCESS_INTERCEPTED</p>
            <p class="mb-1 small">[ OPERATOR_ID: {{ app.user ? app.user.userIdentifier : 'ANONYMOUS_GUEST' }} ]</p>
            <p class="mb-1 small">[ LOG_ACTION: SECURITY_OVERRIDE_RECORDED ]</p>
            <p class="matrix-glow small">[ RECOMMENDATION: DISCONNECT_FROM_SECTOR ]</p>
        </div>

        <p class="terminal-subtitle mb-5">Current credentials do not possess the decryption keys for this sector.</p>

        <div class="d-flex flex-column flex-sm-row justify-content-center gap-3 pt-4 border-top-terminal">
            <a href="{{ path('home') }}" class="matrix-btn">
                [ ESCAPE_TO_SAFETY ]
            </a>
            <a href="{{ path('login') }}" class="action-link modify pt-2">
                [ RE_AUTHENTICATE_IDENTITY ]
            </a>
        </div>
    </div>
</div>
{% endblock %}