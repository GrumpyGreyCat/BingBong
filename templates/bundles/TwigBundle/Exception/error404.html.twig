{% extends 'base.html.twig' %}

{% block body %}
{% block navbar %}{{ parent() }}{% endblock %}

<div class="container directory-container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="matrix-card error-card text-center p-5">
        <h1 class="display-1 terminal-error-text fw-bold mb-0">404</h1>
        <h2 class="matrix-title mt-0 mb-4">
            <span class="matrix-glow">></span> TARGET_NOT_FOUND
        </h2>
        
        <div class="terminal-text-block mb-4">
            <p class="mb-1 text-danger">[!] WARNING: REQUESTED_COORDINATES_INVALID</p>
            <p class="mb-1 opacity-50 small">[ TRACE_LOG: {{ app.request.uri }} ]</p>
            <p class="matrix-glow small">[ STATUS: SIGNAL_TERMINATED ]</p>
        </div>

        <div class="glitch-container mb-5">
            <img src="https://media2.giphy.com/media/v1.Y2lkPTc5MGI3NjExcGJzYWNwd3BmeWhmY21tYnkwaTAyN28zanV2cWl3OGVxY2hibTFmbyZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/RowXu6b79HTS36NjDC/giphy.gif" 
                 alt="Glitch" class="matrix-glitch-gif">
        </div>

        <div class="pt-3 border-top-terminal">
            <a href="{{ path('home') }}" class="matrix-btn">
                [ REBOOT_TO_DASHBOARD ]
            </a>
        </div>
    </div>
</div>
{% endblock %}